# ============================================
# Deliveroo Backend - Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------

# Flask environment (set to "production" for deployment)
FLASK_ENV=development
FLASK_DEBUG=false

# Server port (Render will set this automatically)
PORT=5000

# -----------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# -----------------------------------------------------------------------------
# For local development:
# DATABASE_URL=postgresql://postgres:password@localhost:5432/deliveroo

# For Render deployment - Render will auto-set this variable!
# DO NOT uncomment below - Render provides DATABASE_URL automatically
# DATABASE_URL=postgresql://user:password@host:5432/deliveroo

# -----------------------------------------------------------------------------
# JWT AUTHENTICATION
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a strong random secret for production!
# Use: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# Token expiration times
JWT_ACCESS_TOKEN_EXPIRES_HOURS=1
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# -----------------------------------------------------------------------------
# MPESA DARASA API (M-Pesa Payments)
# -----------------------------------------------------------------------------
# Get these from Safaricom Developer Portal: https://developer.safaricom.co.ke

MPESA_ENVIRONMENT=sandbox  # Change to "production" when going live

# Consumer credentials (from Safaricom dashboard)
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here

# Business shortcode (your Till Number or Paybill Number)
MPESA_SHORTCODE=174379

# Lipa Na M-Pesa Online passkey (from Safaricom dashboard)
MPESA_PASSKEY=your_passkey_here

# Callback URL (must be publicly accessible for production)
# For local testing, use ngrok: https://ngrok.com/
# MPESA_CALLBACK_URL=https://your-domain.com/api/payments/callback
MPESA_CALLBACK_URL=https://your-render-app.onrender.com/api/payments/callback

# -----------------------------------------------------------------------------
# GOOGLE MAPS API
# -----------------------------------------------------------------------------
# Get API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION (Optional - for email notifications)
# -----------------------------------------------------------------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=noreply@your-domain.com

# -----------------------------------------------------------------------------
# ADMIN USER (created during first run)
# -----------------------------------------------------------------------------
ADMIN_EMAIL=admin@deliveroo.com
ADMIN_PASSWORD=change-this-in-production

# -----------------------------------------------------------------------------
# CORS ORIGINS (comma-separated for multiple domains)
# -----------------------------------------------------------------------------
# Add your production frontend URL here
CORS_ORIGINS=http://localhost:5173,https://your-frontend-domain.com

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

